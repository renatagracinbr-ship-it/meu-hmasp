[Unit]
Description=HMASP WhatsApp Server
After=network.target

[Service]
Type=simple
User=centralderegulacaohmasp
WorkingDirectory=/home/centralderegulacaohmasp/hmasp-chat
ExecStart=/usr/bin/node /home/centralderegulacaohmasp/hmasp-chat/server.js
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=hmasp-whatsapp

# Vari√°veis de ambiente
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target
